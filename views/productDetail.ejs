<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %> | Tech Shop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css" />
    <link rel="stylesheet" href="/css/detail.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold fs-4" href="/">Tech Shop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link fw-medium" href="/">S·∫£n ph·∫©m</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-medium" href="/about">Gi·ªõi thi·ªáu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-medium" href="/contact">Li√™n h·ªá</a>
                    </li>
                </ul>
                <div class="d-flex align-items-center">
                    <input type="text" class="form-control search-bar me-3" placeholder="T√¨m ki·∫øm..." style="max-width: 200px;">
                    <a class="nav-link d-flex align-items-center" href="/cart">
                        <span class="me-1">üõí</span> 
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Product Detail Section -->
    <div class="container product-detail-container mt-4">
        <div class="mb-3">
            <a href="/" class="btn btn-outline-dark">Quay l·∫°i s·∫£n ph·∫©m</a>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="product-image-carousel">
                    <div><img src="<%= product.image %>" class="img-fluid rounded product-image" alt="<%= product.name %>"></div>
                    <% if (product.additionalImages && product.additionalImages.length > 0) { %>
                        <% product.additionalImages.forEach(img => { %>
                            <div><img src="<%= img %>" class="img-fluid rounded product-image" alt="<%= product.name %>"></div>
                        <% }); %>
                    <% } %>
                </div>
            </div>
            <div class="col-md-6 product-info">
                <h2 class="product-title fw-bold"><%= product.name %></h2>
                <p class="product-price text-danger fw-bold fs-4"><%= product.price.toLocaleString() %> VNƒê</p>
                <div class="product-description">
                    <p class="description-text"><%= product.description %></p>
                    <% if (product.description && product.description.length > 150) { %>
                        <button class="btn btn-link read-more-btn" onclick="toggleDescription()">Xem th√™m</button>
                    <% } %>
                </div>
                <button onclick="addToCart('<%= product._id %>', '<%= product.name %>', '<%= product.price %>')" 
                        class="btn btn-dark mt-3">
                    Th√™m v√†o gi·ªè
                </button>
                <% if (product.stock > 0) { %>
                    <p class="text-dark mt-2">C√≤n h√†ng: <%= product.stock %> s·∫£n ph·∫©m</p>
                <% } else { %>
                    <p class="text-danger mt-2">H·∫øt h√†ng</p>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
    <script>
        $('.product-image-carousel').slick({
            dots: true,
            infinite: true,
            speed: 500,
            slidesToShow: 1,
            slidesToScroll: 1,
            autoplay: true,
            autoplaySpeed: 2000
        });

        function toggleDescription() {
            const description = document.querySelector('.description-text');
            const btn = document.querySelector('.read-more-btn');
            if (description.classList.contains('expanded')) {
                description.classList.remove('expanded');
                description.style.maxHeight = '100px';
                btn.textContent = 'Xem th√™m';
            } else {
                description.classList.add('expanded');
                description.style.maxHeight = 'none';
                btn.textContent = 'Thu g·ªçn';
            }
        }

        async function addToCart(productId, name, price) {
            let response = await fetch("/cart/add", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ productId, name, price })
            });
            let result = await response.json();
            alert(result.message);
            updateCartCount();
        }

        updateCartCount();
    </script>
</body>
</html>