<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %> | Tech Shop</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <!-- Slick Carousel CSS (cho carousel h√¨nh ·∫£nh, n·∫øu c·∫ßn) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/detail.css">
    <!-- Google Fonts (n·∫øu c·∫ßn font gi·ªëng iShopChangi) -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="/">Tech Shop</a>
            <div class="collapse navbar-collapse">
                <input type="text" class="form-control search-bar mx-3" placeholder="T√¨m ki·∫øm s·∫£n ph·∫©m...">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/cart">
                            üõí Gi·ªè h√†ng (<span id="cart-count">0</span>)
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Product Detail Section -->
    <div class="container product-detail-container mt-4">
        <div class="row">
            <!-- Product Images (Carousel) -->
            <div class="col-md-6">
                <div class="product-image-carousel">
                    <div><img src="<%= product.image %>" class="img-fluid rounded product-image" alt="<%= product.name %>"></div>
                    <!-- Th√™m c√°c h√¨nh ·∫£nh kh√°c n·∫øu c√≥ (t√πy ch·ªçn) -->
                    <% if (product.additionalImages && product.additionalImages.length > 0) { %>
                        <% product.additionalImages.forEach(img => { %>
                            <div><img src="<%= img %>" class="img-fluid rounded product-image" alt="<%= product.name %>"></div>
                        <% }); %>
                    <% } %>
                </div>
            </div>

            <!-- Product Info -->
            <div class="col-md-6 product-info">
                <h2 class="product-title"><%= product.name %></h2>
                <p class="product-price text-danger fw-bold"><%= product.price.toLocaleString() %> VNƒê</p>
                
                <!-- Product Description with "Read More" -->
                <div class="product-description">
                    <p class="description-text"><%= product.description %></p>
                    <% if (product.description && product.description.length > 150) { %>
                        <button class="btn btn-link read-more-btn" onclick="toggleDescription()">Xem th√™m</button>
                    <% } %>
                </div>

                <!-- Add to Cart Button -->
                <button onclick="addToCart('<%= product._id %>', '<%= product.name %>', '<%= product.price %>')" 
                        class="btn btn-primary mt-3">
                    üõí Th√™m v√†o gi·ªè h√†ng
                </button>

                <!-- Stock Information (n·∫øu c√≥) -->
                <% if (product.stock > 0) { %>
                    <p class="text-success mt-2">C√≤n h√†ng: <%= product.stock %> s·∫£n ph·∫©m</p>
                <% } else { %>
                    <p class="text-danger mt-2">H·∫øt h√†ng</p>
                <% } %>
            </div>
        </div>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Slick Carousel JS (cho carousel h√¨nh ·∫£nh) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>

    <script>
        // Initialize Slick Carousel for product images
        $('.product-image-carousel').slick({
            dots: true,
            infinite: true,
            speed: 500,
            slidesToShow: 1,
            slidesToScroll: 1,
            autoplay: true,
            autoplaySpeed: 2000
        });

        // Toggle description (Read More/Less)
        function toggleDescription() {
            const description = document.querySelector('.description-text');
            const btn = document.querySelector('.read-more-btn');
            if (description.classList.contains('expanded')) {
                description.classList.remove('expanded');
                description.style.maxHeight = '100px';
                btn.textContent = 'Xem th√™m';
            } else {
                description.classList.add('expanded');
                description.style.maxHeight = 'none';
                btn.textContent = 'Thu g·ªçn';
            }
        }

        // Add to Cart function
        async function addToCart(productId, name, price) {
            let response = await fetch("/cart/add", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ productId, name, price })
            });

            let result = await response.json();
            alert(result.message);
        }

        // Update cart count (n·∫øu c·∫ßn)
        async function updateCartCount() {
            try {
                let response = await fetch("/cart/count");
                let data = await response.json();
                document.getElementById("cart-count").textContent = data.count;
            } catch (error) {
                console.error("L·ªói t·∫£i gi·ªè h√†ng:", error);
            }
        }
        updateCartCount(); 
    </script>

</body>
</html>